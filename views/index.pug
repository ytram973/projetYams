doctype html
html
  head
    title Jeu de Dés
    style.
      .game-container {
        background-image: url("path/to/background-image.jpg");
        background-size: cover;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
        font-family: Arial, sans-serif;
        color: white;
      }

      h1 {
        font-size: 3rem;
        margin-bottom: 2rem;
      }

      .dice {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
      }

      .dice img {
        width: 100px;
        margin: 0 1rem;
      }

      button {
        background-color: #e74c3c;
        color: white;
        font-size: 1.5rem;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      p {
        font-size: 1.2rem;
      }
  body
    div.game-container
      h1 Jeu de Dés
      .dice
        each die in dice
          img(src=`path/to/dice-${die}.png`, alt=`Dé ${die}`)
      button(type="button") Lancer les dés
      p Pâtisserie gagnée : #{pastry}
